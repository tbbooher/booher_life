%h1 Listing workouts

%table.table.zebra-striped
  %tr
    %th Workout date
    %th Description
    %th Power
    %th Crossfit workout
    %th
    %th

  - @workouts.each do |workout|
    %tr
      %td= workout.workout_date
      %td= link_to truncate(workout.description), workout
      %td= workout.power
      %td= workout.crossfit_workout_id
      %td= link_to 'Edit', edit_workout_path(workout)
      %td= link_to 'Destroy', workout, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Workout', new_workout_path
