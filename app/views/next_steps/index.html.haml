%h1= "Listing next steps for #{@stressor.name}"

%table
  %tr
    %th Task
    %th Due date
    %th Difficulty
    %th
    %th
    %th

  - @next_steps.each do |next_step|
    %tr
      %td= link_to next_step.task, edit_stressor_next_step_path(@stressor.id,next_step)
      %td= next_step.due_date
      %td= next_step.difficulty
      %td= next_step.status  
      %td= link_to 'Destroy', stressor_next_steps_path(@stressor.id), :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Next step', new_stressor_next_step_path(@stressor.id)
\|
= link_to 'Stressor', stressor_path(@stressor)
