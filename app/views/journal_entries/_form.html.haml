%h2 Last Entry
.well
  %p
    %b Description:
  = @last_entry.description
  %p
    %b Health Statement:
    = @last_entry.health_statement

= simple_form_for(@journal_entry) do |f|
  = f.error_notification

  .form-inputs
    = f.input :entry_date, as: :date
    = f.input :description, as: :text
    = f.input :to_do, as: :text, input_html: { style: 'height:300px' }
    = f.input :memory_verse, as: :text
    = f.input :purity, as: :range, input_html: {min: 1, max: 5, step: 0.25}, label: "Purity (high is pure)"
    = f.input :lack_of_discipline, as: :boolean, wrapper: :checkbox
    = f.input :fitness, as: :range, input_html: {min: 1, max: 5, step: 0.25}
    = f.input :devotional, as: :range, input_html: {min: 1, max: 5, step: 0.25}
    = f.input :chrissy, as: :range, input_html: {min: 1, max: 5, step: 0.25}
    = f.input :relational, as: :range, input_html: {min: 1, max: 5, step: 0.25}
    = f.input :friends_in_focus
    = f.input :discipline, as: :range, input_html: {min: 1, max: 5, step: 0.25}
    = f.input :stress, as: :range, input_html: {min: 1, max: 5, step: 0.25}
    = f.input :facepicking, as: :range, input_html: {min: 1, max: 5, step: 0.25}, label: "Facepicking (high is good)"
    = f.input :sick, as: :boolean, wrapper: :checkbox
    = f.input :health_statement
    = f.input :flossed, as: :boolean, wrapper: :checkbox
    = f.input :workout, as: :boolean, wrapper: :checkbox
    = f.input :problem_of_the_day, as: :text
    = f.input :problem_attempted, as: :boolean, wrapper: :checkbox
    = f.input :problem_solved, as: :boolean, wrapper: :checkbox

  .form-actions
    = f.button :submit
