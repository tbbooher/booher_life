= simple_form_for(@stressor) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description, as: :text
    = f.input :long_term_vision, as: :text
    = f.input :urgency, collection: [:extreme, :urgent, :can_wait]
    = f.input :impact, collection: [:life_changing, :important, :not_critical]
    = f.input :difficulty, collection: DIFFICULTIES
    = f.input :status, collection: STATUSES
      
  .form-actions
    = f.button :submit
